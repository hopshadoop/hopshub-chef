#!/bin/bash

help() {
    echo "usage: $0 backup|restore id "
    echo ""
    exit 1
}

if [ $# -ne 2  ]; then
    help
fi

if [ "$1" = "backup" ] ; then
    <%= node.ndb.scripts_dir %>/bin/backup-start.sh $2
elif [ "$1" = "restore" ] ; then
    <%= node.ndb.scripts_dir %>/bin/backup-restore.sh $2    
else
    help
fi

exit $?
