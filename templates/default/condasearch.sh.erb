#!/bin/bash

# conda search -c $1 $2

if [ $# -ne 2  ]; then
 echo "incorrect usage"
 exit 2
fi
CHANNEL="${1//[^a-zA-Z0-9\.\-\_:\/\&~?]/}"
if [ "$CHANNEL" != "defaults" ] ; then
   CHANNEL="-c $CHANNEL --override-channels"
fi
LIB="${2//[^a-zA-Z0-9\.\-\_]/}"
<%= node['conda']['base_dir'] %>/bin/conda search $CHANNEL "${LIB}"  | grep -v Fetching | awk '{print $1","$2}' | grep -v "^\*"
exit ${PIPESTATUS[0]}