#!/bin/bash

help() {
    echo ""
    echo "usage: $0 [start logfile] | [stop pid] "
    echo ""
    exit 1
}

PORT=0

if [ "$1" == "stop" ] ; then

    if [ $# -ne 2 ]; then
	help
    fi

    # Check that $2 is an int (and not some injection attack)
    re='^[0-9]+$'
    if ! [[ $2 =~ $re ]] ; then
      echo "error: Not a number" >&2
      help
    fi

    su -m -l <%= node["jupyter"]["user"] %> -c "./kill-jupyter.sh $2"
    
elif [ "$1" == "start" ] ; then

    if [ $# -ne 2 ]; then
	help
    fi

#proj="$( cut -d '__' -f 1 <<< "$2" )"

# use '-m' to preserve the environment varibables that were set in the Java program
# that starts the notebook server
    su -m -l <%= node["jupyter"]["user"] %> -c "nohup jupyter notebook 2>&1 > $2 &"

else
  help
fi




exit $?
