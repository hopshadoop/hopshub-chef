#!/bin/bash

help() {
    echo ""
    echo "usage: $0 [start jupyter_home hadoop_home logfile] | [stop jupyter_home] "
    echo ""
    exit 1
}

PORT=0

if [ "$1" == "stop" ] ; then

    if [ $# -ne 3 ]; then
	help
    fi

    # Check that $2 is an int (and not some injection attack)
    re='^[0-9]+$'
    if ! [[ $2 =~ $re ]] ; then
      echo "error: Not a number" >&2
      help
    fi

    su -m <%= node["jupyter"]["user"] %> -c "./jupyter-kill.sh $2"
    
elif [ "$1" == "start" ] ; then

    if [ $# -ne 4 ]; then
	help
    fi

    # Sanity checks for injection attacks
    if [ ! -d "$2" ] ; then
	echo "Invalid JUPYTER_HOME directory: $2"
	exit 3
    fi
    if [ ! -d "$3" ] ; then
	echo "Invalid HADOOP_HOME directory: $2"
	exit 3
    fi
    # Should look like 'name-4444.log', where '4444' is the port number for the server
    if [[ $4 =~ ^[a-zA-Z0-9]{3,255}__[a-zA-Z0-9]{3,32}\-[0-9]+\.log ]] ; then
	echo "logfile ok"
    else
	echo "Invalid logfile parameter: $4"
	exit 4
    fi

    # '-m' means preserve environment variables in process launched
    su -m <%= node["jupyter"]["user"] %> -c "./jupyter-launch.sh $2 $3 $4"
else
  help
fi


exit $?
