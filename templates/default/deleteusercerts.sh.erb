#!/bin/bash

if [ $# -ne 1  ]; then
 echo "incorrect usage"
 exit 1
fi

DOMAIN="$1"

KEYSTOREPW=<%= node['hopsworks']['admin']['password'] %>
cd <%= @int_ca_dir %>

#1 revoc the certificat
openssl ca -batch -config openssl-intermediate.cnf \
	-passin pass:$KEYSTOREPW \
	-revoke certs/${DOMAIN}.cert.pem   

#2 remove the files

rm -f <%= @int_ca_dir %>/private/${DOMAIN}.key.pem
rm -f <%= @int_ca_dir %>/certs/${DOMAIN}.cert.pem
rm -f <%= @int_ca_dir %>/csr/${DOMAIN}.csr.pem

